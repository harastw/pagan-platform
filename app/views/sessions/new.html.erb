
<h2>Вход в админку</h2>

<% if flash[:error] %>
  <div style="color: red">
    <%= flash[:error] %>
  </div>
<% end %>

<%= form_tag login_path do %>
  <p>
    <%= label_tag :username, "Логин" %><br>
    <%= text_field_tag :username, nil, autocomplete: "off" %>
  </p>

  <p>
    <%= label_tag :password, "Пароль" %><br>
    <%= password_field_tag :password, nil, autocomplete: "off" %>
  </p>

  <p>
    <%= submit_tag "Войти" %>
  </p>
<% end %>
